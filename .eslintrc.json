{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "import/extensions": [
            "error", "ignorePackages",
            {
                "js": "never", "jsx": "never", "ts": "never", "tsx": "never"
            }
        ]
    }
}
